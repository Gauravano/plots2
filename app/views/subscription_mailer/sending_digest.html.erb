<div class="col-md-12" style="margin-left: 20%;">
  <h3 style="margin-left: 20%">Your Weekly Digest</h3>
  <div class="col-md-12" style="display: flex; margin-top: 100px;">
    <div class="userInfo" style="flex-grow: 1">
      <% if @user && @user.photo_file_name %>
          <img style="width:50px;margin-right:6px;" class="img-circle" src="<%= @user.photo_path(:thumb) %>" />
      <% else %>
          <div style=" vertical-align:middle;display:inline-block;height:50px;width:50px;margin-right:6px;background:#ccc;" class="img-circle"></div>
      <% end %>
      <!--<a href="/profile/<%= @user.name %>"><%= @user.name %></a>-->
    </div>
    <div class="publicImg" style="flex-grow: 1">
      <a class="img" href="https://publiclab.org/"><img src="https://publiclab.org/system/images/photos/000/022/015/original/boots-circle_simple.svg" style="width: 50px; height: 50px; "></a>
    </div>
  </div>
  <% @nodes.each do |node| %>

    <%= render partial: 'dashboard/node_moderate', locals: { node: node } %>

    <% if node.main_image %>
        <a class="img" href="<%= node.path %>"><img src="<%= node.main_image.path(:default) %>" style="width:100%;" /></a>
    <% end %>

    <h4><a href="<%= node.path %>"><%= node.title %></a></h4>

  <% end %>
</div>
